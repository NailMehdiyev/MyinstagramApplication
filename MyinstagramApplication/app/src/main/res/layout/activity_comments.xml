<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comments">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r"
        android:layout_below="@id/to" />


    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/commentresm"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:src="@drawable/ic_profil" />

        <EditText
            android:id="@+id/editcommentari"
            android:layout_toRightOf="@+id/commentresm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/isarecom"
            android:hint="Bir comment yazin"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/isarecom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
           android:src="@drawable/ic_gondermek" />

    </RelativeLayout>


</RelativeLayout>