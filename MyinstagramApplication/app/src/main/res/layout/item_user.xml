<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage"
        android:visibility="gone"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_profil" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/online"
        android:layout_marginStart="16dp"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:background="@drawable/ic_online"/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offline"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_offline"/>



    <TextView
        android:id="@+id/us"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/circleimage"
        android:text="Username"
        android:textColor="#393535"
        android:textSize="19dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/user_item_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/us"

        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/circleimage"
        android:text="No messages"
        android:textColor="#958E8E"
        android:textSize="15sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/chatbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/us"
        android:src="@drawable/ic_chatcik" />


    <Button
        android:id="@+id/fol"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="#F4E3F8"
        android:text="Follow"
        android:textColor="#4E80CA"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone"

        />

</RelativeLayout>