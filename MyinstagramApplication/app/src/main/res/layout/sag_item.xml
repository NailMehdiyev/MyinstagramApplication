<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:id="@+id/relativelayoutenn"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/cardddd"
        app:cardCornerRadius="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#BAEF7C"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sildelete"
                android:layout_gravity="center"
                android:visibility="gone"

                android:layout_marginStart="5dp"
                android:background="@drawable/ic_deleted"/>



            <ImageView
                android:layout_width="30dp"
                android:id="@+id/copyala"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_copyala"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/mesajresm"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salam"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:maxLines="2"
                android:id="@+id/item_mesaj"
                android:padding="3dp"
                android:textColor="#6A6464"
                android:textStyle="bold"
                android:textSize="17sp"/>




        </LinearLayout>




    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.07.2022 12:07 pm"
        android:layout_toLeftOf="@id/cardddd"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:textColor="#7E7171"
        android:id="@+id/item_tarix"
        android:textSize="12dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="delivered"
        android:layout_below="@id/cardddd"
        android:gravity="end"
        android:id="@+id/item_goruldu"
        android:layout_marginStart="18dp"
        android:textColor="#837979"
        android:textStyle="bold"
        android:textSize="16sp"/>







</RelativeLayout>